<h1>Add your message</h1>

<form action="/messages" method="POST">
  <div>
    <input
      type="email"
      name="email"
      placeholder="email"
      pattern="[a-zA-Z0-9.-_]{1,}@[a-zA-Z0-9.-]{1,}[.]{1}[a-zA-Z0-9]{2,}"
      required
    />
  </div>
  <div>
    <input type="text" name="text" placeholder="text" required />
  </div>
  <button>Send</button>
</form>

<a href="/messages">Back to chat</a>
